{
  "name": "@sung-yeop/codemirror-essentials-react",
  "version": "0.0.4",
  "description": "React wrapper for CodeMirror 6",
  "author": "sung-yeop",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "codemirror",
    "react",
    "editor",
    "code-editor"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/risorius-devteam/codemirror-essentials.git",
    "directory": "packages/react-codemirror"
  },
  "homepage": "https://github.com/risorius-devteam/codemirror-essentials#readme",
  "bugs": {
    "url": "https://github.com/risorius-devteam/codemirror-essentials/issues"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@codemirror/state": "^6.4.0",
    "@codemirror/view": "^6.23.0",
    "@uiw/react-codemirror": "^4.25.1"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "jsdom": "^26.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vitest": "^1.3.1"
  }
}
