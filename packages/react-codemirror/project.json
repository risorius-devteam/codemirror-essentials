{
  "name": "react-codemirror",
  "root": "packages/react-codemirror",
  "sourceRoot": "packages/react-codemirror/src",
  "projectType": "library",
  "tags": ["type:lib", "framework:react"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsup",
        "cwd": "packages/react-codemirror"
      },
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest",
        "cwd": "packages/react-codemirror"
      },
      "cache": true
    },
    "test:run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run",
        "cwd": "packages/react-codemirror"
      },
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/react-codemirror/src/**/*.{ts,tsx,js,jsx}"]
      },
      "cache": true
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/react-codemirror"
      },
      "cache": true
    }
  }
}