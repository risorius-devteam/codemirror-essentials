{
  "name": "codemirror-essentials",
  "version": "0.0.1",
  "private": true,
  "description": "Essential CodeMirror extensions for modern development",
  "repository": {
    "type": "git",
    "url": "https://github.com/risorius-devteam/codemirror-essentials.git"
  },
  "packageManager": "pnpm@9.12.1",
  "type": "module",
  "scripts": {
    "build": "nx run-many -t build",
    "build:lib": "nx run react-codemirror:build",
    "build:examples": "nx run-many -t build --projects=tag:scope:example",
    "dev": "nx run-many -t dev",
    "dev:highlight": "nx run highlight-example:dev",
    "dev:line-widget": "nx run line-widget-example:dev",
    "dev:inject-class": "nx run inject-class-name-example:dev",
    "clean": "pnpm -r run clean && nx reset",
    "test": "pnpm run test:ci",
    "test:pr": "nx affected --targets=lint,test:run,type-check,build",
    "test:ci": "pnpm run test:eslint && pnpm run test:lib && pnpm run test:types && pnpm run test:build",
    "test:eslint": "nx run-many -t lint",
    "test:lib": "nx run-many -t test:run",
    "test:types": "nx run-many -t type-check",
    "test:build": "nx run-many -t build",
    "test:format": "prettier --check .",
    "lint": "nx run-many -t lint",
    "lint:fix": "nx run-many -t lint --fix",
    "type-check": "nx run-many -t type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "graph": "nx graph",
    "affected:build": "nx affected -t build",
    "affected:test": "nx affected -t test",
    "affected:lint": "nx affected -t lint",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "nx run react-codemirror:build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.35.0",
    "@nx/eslint": "^21.5.2",
    "@nx/js": "^21.5.2",
    "@nx/vite": "^21.5.2",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "nx": "^21.5.2",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.0",
    "vitest": "^1.3.1"
  },
  "pnpm": {
    "overrides": {}
  }
}
