{
  "name": "codemirror-essentials",
  "version": "0.0.1",
  "private": true,
  "description": "Essential CodeMirror extensions for modern development",
  "repository": {
    "type": "git",
    "url": "https://github.com/risorius-devteam/codemirror-essentials.git"
  },
  "packageManager": "pnpm@9.12.1",
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "build:lib": "turbo build --filter=react-codemirror",
    "build:examples": "turbo build --filter='./examples/*'",
    "dev": "turbo dev",
    "dev:line-widget": "turbo dev --filter=@codemirror-essentials/line-widget",
    "dev:inject-class": "turbo dev --filter=@codemirror-essentials/inject-class-name",
    "clean": "turbo clean && rm -rf node_modules",
    "test": "pnpm run test:ci",
    "test:ci": "pnpm run test:eslint && pnpm run test:lib && pnpm run test:types && pnpm run test:build",
    "test:eslint": "turbo lint",
    "test:lib": "turbo test:run",
    "test:types": "turbo type-check",
    "test:build": "turbo build",
    "test:format": "prettier --check .",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo build --filter=react-codemirror && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/js": "^9.35.0",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "turbo": "^2.6.1",
    "typescript": "^5.4.0",
    "vitest": "^1.3.1"
  },
  "pnpm": {
    "overrides": {}
  }
}
